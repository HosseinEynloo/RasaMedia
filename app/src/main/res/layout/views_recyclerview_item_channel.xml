<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView_offerBakh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_below="@+id/cardView_bannerSecoundType">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/RelativeLayout_offerBakh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.rasa.customfontviews.CustomFontTextView
                    android:id="@+id/textViewMainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="پیشنهاد باخ"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/standard_margin"
                    app:fonts_TextView="iranSansBold"
                    android:textColor="@color/colorPrimary"/>

                <ImageView
                    android:id="@+id/imageView_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="18dp"
                    app:srcCompat="@drawable/ic_chevron_left_24dp"
                    />

                <com.rasa.customfontviews.CustomFontTextView
                    android:id="@+id/textView_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بیشتر"
                    app:fonts_TextView="iranSans"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView_more"
                    android:textColor="@color/colorPrimary"
                    />



            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_itemChannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                />


        </LinearLayout>


    </android.support.v7.widget.CardView>




</RelativeLayout>