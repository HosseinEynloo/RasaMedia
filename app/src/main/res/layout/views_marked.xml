<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/small_margin"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginRight="@dimen/small_margin"
    android:layout_marginLeft="@dimen/standard_margin"
    android:layout_marginBottom="@dimen/small_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_marked"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            tools:src="@drawable/channel"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            android:layout_toLeftOf="@+id/imageView_marked">

            <com.rasa.customfontviews.CustomFontTextView
                android:id="@+id/title_marked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="روانشناسی"
                android:layout_alignParentRight="true"
                android:maxLines="2"
                android:ellipsize="end"
                app:fonts_TextView="iranSans"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorTitleMain"
                android:layout_marginBottom="@dimen/standard_margin"
                />

            <com.rasa.customfontviews.CustomFontTextView
                android:id="@+id/titleGroup_marked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=" خانواده و جمعیت روانشناسی"
                android:maxLines="2"
                android:ellipsize="end"
                app:fonts_TextView="iranSans"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_below="@+id/title_marked"
                android:layout_marginBottom="@dimen/largMargin"
                />

            <com.rasa.customfontviews.CustomFontTextView
                android:id="@+id/registerDate_marked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=" 1397/03/25"
                android:maxLines="2"
                app:fonts_TextView="iranSans"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorIconMore"
                android:layout_below="@+id/titleGroup_marked"
                android:layout_marginBottom="@dimen/standard_margin"
                />

        </RelativeLayout>





    </RelativeLayout>




</android.support.v7.widget.CardView>