<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/standard_margin"
    android:layout_marginLeft="@dimen/small_margin"
    android:layout_marginRight="@dimen/small_margin"
    android:layout_marginTop="@dimen/small_margin"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray_new"
        >

        <ImageView
            android:id="@+id/imageView_newItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heigh_imageview_new"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            tools:src="@drawable/channel"/>

        <com.rasa.customfontviews.CustomFontTextView
            android:id="@+id/title_newItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="jksabjh"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="@dimen/standard_margin"
            android:layout_gravity="right"
            android:textSize="14sp"
            app:fonts_TextView="iranSans"
            android:textColor="@color/colorTitleMain"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            >

            <com.rasa.customfontviews.CustomFontTextView
                android:id="@+id/TextView_discription_newItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12dp"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_toRightOf="@+id/imageView_visibility"
                tools:text="jhdasghvdsfsdgggfh"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_marginLeft="@dimen/small_margin"
                app:fonts_TextView="iranSans"
                android:layout_centerVertical="true"/>


            <com.rasa.customfontviews.CustomFontTextView
                android:id="@+id/defaultVisit_newItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="85"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/small_margin"
                android:textColor="@color/colorIconMore"
                app:fonts_TextView="iranSans"/>


            <ImageView
                android:id="@+id/imageView_visibility"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_visibility_black_24dp"
                android:layout_toRightOf="@+id/defaultVisit_newItem"/>



        </RelativeLayout>





    </LinearLayout>



</android.support.v7.widget.CardView>