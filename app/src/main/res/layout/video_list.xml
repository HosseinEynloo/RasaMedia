<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/standard_margin"
    android:layout_marginLeft="@dimen/standard_margin"
    android:layout_marginBottom="@dimen/standard_margin"
    android:layout_marginTop="12dp">

    <ImageView
        android:id="@+id/imageView_list"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        tools:src="@drawable/channel"
        android:layout_alignParentRight="true"
        />

    <RelativeLayout
        android:id="@+id/relativeLayout_titleAndic_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imageView_list">


        <ImageView
            android:id="@+id/imageview_more_videoPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_more_24dp"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <com.rasa.customfontviews.CustomFontTextView
            android:id="@+id/textview_title_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTitleMain"
            android:layout_marginRight="@dimen/small_margin"
            android:maxLines="2"
            tools:text="dffgh"
            android:ellipsize="end"
            app:fonts_TextView="iranSans"
            android:layout_toRightOf="@+id/imageview_more_videoPlayer"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            />



    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/imageView_list"
    android:layout_below="@+id/relativeLayout_titleAndic_more">

    <com.rasa.customfontviews.CustomFontTextView
        android:id="@+id/textview_description_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/small_margin"
        android:maxLines="3"
        android:textSize="12dp"
        app:fonts_TextView="iranSans"
        tools:text="hjhjjhsyghjxxxxxxaaaaag"
        android:layout_marginTop="@dimen/standard_margin"
        android:ellipsize="end"
        />

    <com.rasa.customfontviews.CustomFontTextView
        android:id="@+id/textView_visite_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مشاهده"
        android:textSize="13sp"
        app:fonts_TextView="iranSans"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/standard_margin"
        android:textColor="@color/colorIconMore"
        android:layout_below="@+id/textview_description_list"
        />

    <com.rasa.customfontviews.CustomFontTextView
        android:id="@+id/textview_visite_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="125"
        android:textSize="12sp"
        app:fonts_TextView="iranSans"
        android:textColor="@color/colorIconMore"
        android:layout_below="@+id/textview_description_list"
        android:layout_toLeftOf="@+id/textView_visite_list"
        android:layout_marginTop="@dimen/standard_margin"/>




</RelativeLayout>



</RelativeLayout>